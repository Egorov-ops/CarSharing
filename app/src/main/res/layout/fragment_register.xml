<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/rm"
    android:orientation="vertical"
    tools:context=".presentation.fragment.RegisterFragment">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="100dp"
        android:fontFamily="@font/pakenham"
        android:text="Rent Cars"
        android:textColor="@color/font_color"
        android:textSize="40sp" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:fontFamily="@font/blue_curve"
        android:text="Аренда автомобилей"
        android:textColor="@color/font_color"
        android:textSize="30sp" />

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/et_name"

        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_margin="5dp"
        android:hint="Введите имя"
        android:padding="10dp"
        android:textColorHint="@color/font_color" />

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/et_phone"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_margin="5dp"
        android:hint="Введите телефон"
        android:inputType="phone"
        android:padding="10dp"
        android:textColorHint="@color/font_color" />

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/et_region"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_margin="5dp"
        android:hint="Введите регион"
        android:padding="10dp"
        android:textColorHint="@color/font_color" />

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/et_email"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_margin="5dp"
        android:hint="Введите email"
        android:padding="10dp"
        android:textColorHint="@color/font_color" />

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/et_password"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_margin="5dp"
        android:hint="Введите пароль"
        android:padding="10dp"
        android:textColorHint="@color/font_color" />

    <Button
        android:id="@+id/btn_register"
        android:layout_width="wrap_content"
        android:layout_height="70dp"
        android:layout_gravity="center"
        android:backgroundTint="@color/yimmin_blue"
        android:fontFamily="@font/bad_comic"

        android:textSize="20sp"
        android:topLeftRadius="10dp"
        android:topRightRadius="10dp" />

    <TextView
        android:id="@+id/tv_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="20dp"
        android:padding="10dp"
        android:textColor="@color/font_color"
        android:textSize="20sp"
        android:textStyle="bold" />

</LinearLayout>