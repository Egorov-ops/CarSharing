<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/sign_graph"
    app:startDestination="@id/registerFragment">


    <fragment
        android:id="@+id/registerFragment"
        android:name="com.example.rentcars.presentation.fragment.RegisterFragment"
        android:label="fragment_register"
        tools:layout="@layout/fragment_register" >
        <action
            android:id="@+id/action_registerFragment_to_signInFragment"
            app:destination="@id/signInFragment" />
    </fragment>
    <fragment
        android:id="@+id/signInFragment"
        android:name="com.example.rentcars.SignInFragment"
        android:label="fragment_sign_in"
        tools:layout="@layout/fragment_sign_in" >
        <action
            android:id="@+id/action_signInFragment_to_mainFlowFragment2"
            app:destination="@id/mainFlowFragment2" />
    </fragment>
    <fragment
        android:id="@+id/mainFlowFragment2"
        android:name="com.example.rentcars.presentation.baseFragments.MainFlowFragment"
        android:label="MainFlowFragment" />
</navigation>